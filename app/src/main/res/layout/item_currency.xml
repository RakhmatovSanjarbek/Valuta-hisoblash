<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginBottom="12dp">
    
    <androidx.cardview.widget.CardView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent">
        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/im_test_flag"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginStart="70dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_ccy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="USD"
            android:textSize="18sp"
            android:textColor="@color/black_33"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_ccy_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="AQSH dollori"
            android:textColor="@color/black_10"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12949.21 UZS"
            android:textSize="16sp"
            android:textColor="@color/black_33"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0.92%"
                android:textColor="@color/black_10"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/iv_diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_growth"/>
        </LinearLayout>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:layout_marginHorizontal="70dp"/>

</RelativeLayout>