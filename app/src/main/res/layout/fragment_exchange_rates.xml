<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screen.exchange_rates.ExchangeRatesFragment">

    <TextView
        android:id="@+id/tv_currency_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_currency_course"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black_80"/>
    <TextView
        android:id="@+id/vt_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="15.09.2024"
        android:textSize="16sp"
        android:layout_marginTop="33dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        android:textColor="@color/black_33"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_below="@id/tv_currency_course"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="16dp"/>
</RelativeLayout>